  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "${workspaceRoot}/server/manage.py",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--host",
        "0.0.0.0",
        "--port",
        "3000"
      ],
      "jinja": true
    },
    {
      "name": "Python: Test debug config",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "logToFile": true
    },
  ]
}